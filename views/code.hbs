<div class="main-container">
    <div class="wrapper">

        <div class="flexthis code">
            <h1 class="banner code unselectable">codesh</h1>
            <a href="/" class="pushleft changepage">&lt;</a>

        </div>

        <div class="innercontainer" id="code">
            <!-- Code Block -->
            <form id="codeForm">
                <div class="header">
                    <h3 class="unselectable">Insert your code / text you want to
                        share</h3>
                </div>
                <textarea name="codeInput" id="codeInput"></textarea>
                <div class="code-control-wrapper">
                    <div class="radiocontainer">
                        <p class="unselectable days">Days</p>
                        <input
                            type="radio"
                            name="days"
                            id="1d"
                            value="1"
                            checked="true"
                        /><label for="1d">1</label>
                        <input
                            type="radio"
                            name="days"
                            id="3d"
                            value="3"
                        /><label for="3d">3</label>
                        <input
                            type="radio"
                            name="days"
                            id="7d"
                            value="7"
                        /><label for="7d">7</label>
                        <input
                            type="password"
                            name="password"
                            id="pwd"
                            placeholder="Password (optional)"
                            autocomplete="off"
                        />
                    </div>
                    <div class="submit-btn">
                        <button type="submit">Submit</button>
                    </div>
                </div>
            </form>

        </div>
        <div class="footer code"><p class="unselectable">&copy; IMGSH 2024</p><a
                href="https://github.com/teeque87/imgsh"
            >Github</a></div>
    </div>

</div>

<!-- The Modal -->
<div id="successModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content center" id="modal-content">
        <div id="modal-container">
            <span class="closeSpan">&times;</span>
            <div class="copy-link">
                <input
                    type="text"
                    class="copy-link-input"
                    id="urlInput"
                    placeholder="URL to Image"
                    readonly
                />
                <button type="button" class="copy-link-button">copy</button>
            </div>
            <div class="copy-link">
                <input
                    type="text"
                    class="copy-link-input"
                    id="deleteurlInput"
                    placeholder="Delete URL"
                    readonly
                />
                <button type="button" class="copy-link-button">copy</button>
            </div>
        </div>
    </div>
</div>

<script src="/app_code.js"></script>